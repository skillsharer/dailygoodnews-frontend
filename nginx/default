server {
        server_name dailygoodnews.co.uk www.dailygoodnews.co.uk;

        root /home/ubuntu/git/dailygoodnews-frontend/templates;
        index home.html index.html;


        location / {
            proxy_pass http://127.0.0.1:8000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl;

    ssl_certificate /etc/letsencrypt/live/dailygoodnews.co.uk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dailygoodnews.co.uk/privkey.pem;

    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}

server {
    if ($host = www.dailygoodnews.co.uk) {
        return 301 https://$host$request_uri;
    }
     if ($host = dailygoodnews.co.uk) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    listen [::]:80;
    server_name dailygoodnews.co.uk www.dailygoodnews.co.uk;
    return 404;
}